<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundApp"
    tools:context=".AddActivity">

    <EditText
        android:id="@+id/add_title"
        android:layout_marginTop="30dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Title"
        android:textStyle="bold"
        android:fontFamily="Montserrat"
        android:textColorHint="@color/yellow"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cardviewDate"
        android:layout_below="@+id/add_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/light_blue"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/dates"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:fontFamily="Montserrat"
            android:text="Date"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardviewTime"
        android:layout_below="@+id/add_title"
        android:layout_toRightOf="@id/cardviewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="40dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/light_blue"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/times"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:fontFamily="Montserrat"
            android:text="Time"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

    <EditText
        android:id="@+id/add_place"
        android:layout_below="@+id/cardviewDate"
        android:layout_marginTop="30dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Place"
        android:textStyle="bold"
        android:fontFamily="Montserrat"
        android:textColorHint="@color/yellow"/>

    <TextView
        android:id="@+id/DateText"
        android:layout_below="@id/add_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:paddingVertical="10dp"
        android:fontFamily="Montserrat"
        android:text="Date: "
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/DateTextview"
        android:layout_below="@id/add_place"
        android:layout_toRightOf="@id/DateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:paddingVertical="10dp"
        android:fontFamily="Montserrat"
        android:text="--/--/----"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TimeText"
        android:layout_below="@id/DateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:paddingVertical="10dp"
        android:fontFamily="Montserrat"
        android:text="Time: "
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TimeTextview"
        android:layout_below="@id/DateText"
        android:layout_toRightOf="@id/TimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:paddingVertical="10dp"
        android:fontFamily="Montserrat"
        android:text="-"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardviewCancelAdd"
        android:layout_below="@+id/add_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="40dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/yellow"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/canceladd"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:fontFamily="Montserrat"
            android:text="Cancel"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardviewAdd"
        android:layout_below="@+id/add_place"
        android:layout_toRightOf="@id/cardviewCancelAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="40dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/adds"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:fontFamily="Montserrat"
            android:text="Add"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

</RelativeLayout>