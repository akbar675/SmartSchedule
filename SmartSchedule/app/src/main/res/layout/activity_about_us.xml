                android:layout_marginVertical="5dp"
                android:padding="8dp"
                android:src="@drawable/anggota2" />
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/CardviewAnggota2">

            <TextView
                android:id="@+id/NamaAgt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingVertical="5dp"
                android:fontFamily="montserrat"
                android:text="Rachelia Dita Anggraini"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/NPMAgt2"
                android:layout_below="@id/NamaAgt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingVertical="5dp"
                android:fontFamily="montserrat"
                android:text="1657051001"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/JurusanAgt2"
                android:layout_below="@id/NPMAgt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="montserrat"
                android:text="Ilmu Komputer 2016"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"/>
        </RelativeLayout>
    </RelativeLayout>

    <!--Cardview Anggota 3-->
    <RelativeLayout
        android:id="@+id/IdentitasAnggota3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IdentitasAnggota2"
        android:layout_marginTop="15dp">

        <android.support.v7.widget.CardView
            android:id="@+id/CardviewAnggota3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            app:cardBackgroundColor="@color/white">

            <ImageView
                android:id="@+id/FotoAgt3"
                android:layout_centerInParent="true"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginVertical="5dp"
                android:padding="8dp"
                android:src="@drawable/anggota3" />
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/CardviewAnggota3">

            <TextView
                android:id="@+id/NamaAgt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingVertical="5dp"
                android:fontFamily="montserrat"
                android:text="Arief Achmadi Yusra"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/NPMAgt3"
                android:layout_below="@id/NamaAgt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingVertical="5dp"
                android:fontFamily="montserrat"
                android:text="1657051024"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/JurusanAgt3"
                android:layout_below="@id/NPMAgt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="montserrat"
                android:text="Ilmu Komputer 2016"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"/>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>